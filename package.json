{
  "name": "evtstore",
  "version": "1.2.2",
  "description": "Event Sourcing with Node.JS",
  "main": "index.js",
  "scripts": {
    "test": "mocha \"src/test/**/*.spec.js\" --exit",
    "clean": "rimraf \"*.js\" \"*.js.map\" \"*.d.ts\" \"src/**/*.js*\" \"src/**/*.d.ts\" \"provider/**/*.js*\" \"provider/**/*.d.ts\"",
    "prebuild": "yarn clean",
    "build": "tsc",
    "prepublishOnly": "yarn run clean && yarn build && yarn test",
    "db:remove": "docker rm -f evtstore-mongo evtstore-pg || true",
    "predb:create": "yarn db:remove",
    "db:create": "docker run -dt --name evtstore-mongo -p 30001:27017 mongo:4.0 && docker run --env-file=test.env -dt --name evtstore-pg -p 30002:5432 postgres:12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seikho/evtstore.git"
  },
  "keywords": [
    "event",
    "sourcing",
    "source",
    "stream",
    "cqrs"
  ],
  "author": "Carl Winkler",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seikho/evtstore/issues"
  },
  "homepage": "https://github.com/seikho/evtstore#readme",
  "dependencies": {
    "@types/knex": "^0.16.1",
    "@types/mongodb": "^3.3.6",
    "@types/sqlite3": "^3.1.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/dotenv": "^6.1.1",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "dotenv": "^8.1.0",
    "knex": "^0.20.8",
    "mocha": "^6.2.1",
    "mongodb": "^3.3.2",
    "pg": "^7.12.1",
    "rimraf": "^3.0.0",
    "sqlite3": "^4.1.0",
    "typescript": "^3.7.3"
  },
  "types": "index.d.ts"
}
